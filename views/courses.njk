{% extends "layout.njk" %}

{% block content %}

  <div class="title">
    <h1>Cursos</h1>
  </div>

  <section class="cards">
    <div class="card" id="starter">
      <div class="card-image-container">
        <img src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="starter">
      </div>
      <div class="card-tilte-container">
        <p class="tilte">Starter</p>
      </div>
      <div class="card-info">
        <p>Módulos: 8</p>
        <p class="card-price">Free</p>
      </div>
    </div>

    <div class="card" id="launchbase">
      <div class="card-image-container">
        <img src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="Launchbase">
      </div>
      <div class="card-tilte-container">
        <p class="tilte">LaunchBase</p>
      </div>
      <div class="card-info">
        <p>Módulos: 16</p>
        <p class="card-price">Aguarde para mais detalhes</p>
      </div>
    </div>

    <div class="card" id="gostack">
      <div class="card-image-container">
        <img src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="Gostack">
      </div>
      <div class="card-tilte-container">
        <p class="tilte">GoStack</p>
      </div>
      <div class="card-info">
        <p>Módulos: 24</p>
        <p class="card-price">Aguarde para mais detalhes</p>
      </div>
    </div>
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="maximize-modal">
        <i class="material-icons">aspect_ratio</i>
      </a>
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  <script src="scripts.js"></script>

{%endblock%}